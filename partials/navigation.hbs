{{#unless isSecondary}}
    {{#foreach navigation}}
        <a class="menu-item menu-item-{{slug}}{{#if current}} menu-item-current{{/if}}" href="{{url absolute="true"}}">{{label}}</a>
    {{/foreach}}
{{else}}
    {{#foreach navigation}}
        <a class="menu-item menu-item-{{slug}}{{#if current}} menu-item-current{{/if}}" href="{{url absolute="true"}}">{{label}}</a>
    {{/foreach}}
{{/unless}}
<button style="cursor: pointer;" class="gh-search menu-item menu-item-current" data-ghost-search>{{> "icons/search"}}</button>
